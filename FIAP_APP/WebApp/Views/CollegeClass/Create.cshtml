@model WebApp.Models.Dto.CollegeClass.CollegeClassCreationDto


@{
    ViewData["Title"] = "Nova Turma";
}

<h1>@ViewData["Title"]</h1>
<p>@TempData["Result"]</p>
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">

            <partial name="Error" />

            <div class="form-group">
                <label asp-for="Turma" class="control-label"></label>
                <input asp-for="Turma" class="form-control" />
                <span asp-validation-for="Turma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="date" asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

